{
  "documentationUrl": "https://tripletex.no/",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Tripletex Source Spec",
    "type": "object",
    "required": [
      "base_url",
      "consumer_token",
      "employee_token",
      "expiration_date"
    ],
    "properties": {
      "base_url": {
        "type": "string",
        "title": "Base URL",
        "description": "The base URL of the Tripletex API, e.g. https://api.tripletex.io"
      },
      "consumer_token": {
        "type": "string",
        "title": "Consumer Token",
        "description": "Your Tripletex API consumer token"
      },
      "employee_token": {
        "type": "string",
        "title": "Employee Token",
        "description": "Your Tripletex API employee token"
      },
      "expiration_date": {
        "type": "string",
        "title": "Expiration Date",
        "description": "Token expiration date (YYYY-MM-DD)"
      }
    }
  }
}
